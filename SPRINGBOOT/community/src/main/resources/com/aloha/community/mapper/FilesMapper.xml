<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" --> 
<mapper namespace="com.aloha.mybatis.mapper.filesMapper">
    <!-- 파일 목록 -->
    <!-- <태그 id="메소드명" resultType="패키지명.객체명"></태그>-->
    <!-- 
        <select id="메소드명" resultType="패키지명.객체명"></select>
        resultType : 조회 결과를 매핑할 객체 정보
    -->
    <select id="list" resultType="Files">
        SELECT *
        FROM files
        ORDER BY created_at DESC
    </select>

    <!-- 파일 조회 -->
    <!-- 
        SQL 에 지정할 파라미터 : #{변수명}
        * 넘어오는 매개변수가 1개이면, 변수명이 일치하지 않아도 매핑
        * 객체 -> 객체의 변수명과 일치하는 파라미터 명으로 작성
     -->
    <select id="select" resultType="Files">
        SELECT *
        FROM files
        WHERE no = #{no}
    </select>

    <!-- 파일 등록 -->
    <insert id="insert">
        INSERT INTO files( file_name,file_path,file_size,type)
        VALUES ( #{file_name}, #{file_path}, #{file_size}, #{type} )
    </insert>

    <!-- 파일 수정 -->
    <update id="update">
        UPDATE files
           SET file_name = #{file_name}
              ,file_path = #{file_path}
              ,file_size = #{file_size}
              ,type = #{type}
        WHERE no = #{no}
    </update>

    <!-- 파일 삭제 -->
    <delete id="delete">
        DELETE FROM files
        WHERE no = #{no}
    </delete>

    <!-- 파일 번호 최댓값 -->
    <select id="maxPk" resultType="int">
        SELECT MAX(no)
        FROM files
    </select>
</mapper>